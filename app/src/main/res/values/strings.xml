

<resources
    xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <string name="app_name">InventoryApp</string>

    <!-- activity name for new product-->
    <string name="new_product">Add new product</string>

    <!-- activity name for editing existing product-->
    <string name="edit_product">Edit product</string>

    <!-- name of the product-->
    <string name="product_name">Product Name</string>

    <!-- name of the product-->
    <string name="product_quantity">Quantity</string>

    <!-- name of the product-->
    <string name="product_price">Price</string>

    <!-- string for the text field image-->
    <string name="image_view">Image</string>

    <!-- empty list text -->
    <string name="empty_view">No products yet. Add new products by clicking the button at the bottom of the screen.</string>

    <!-- product saved -->
    <string name="product_saved">Product saved</string>

    <!--- text to tell user to press the picture to take a new one -->
    <string name="new_picture">Press the picture to take a new one</string>

    <!-- sell button, to sell one item of the product -->
    <string name="sell_button">Sell</string>

