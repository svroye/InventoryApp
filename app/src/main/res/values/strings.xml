<string name="error_adding_product">Error with adding product</string>

    <!-- email subject -->
    <string name="mail_subject">New order</string>

    <!-- mail body-->
    <string name="mail_body">Product : <xliff:g id="productName" example="Product 1">%s</xliff:g> \n
    Quantity to order : <xliff:g id="order_quantity" example="5">%d</xliff:g> </string>

    <!-- email of the supplier-->
    <string name="supplier_email">supplier@gmail.com</string>

